<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp">

        <Button
            android:id="@+id/dPreporuci"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_alignEnd="@+id/eOpis"
            android:layout_alignParentBottom="true"
            android:text="Preporuci" />

        <TextView
            android:id="@+id/eBrojStranica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/eNaslovna"
            android:layout_marginBottom="12dp"
            android:text="Broj stranica" />

        <TextView
            android:id="@+id/eOpis"
            android:layout_width="332dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:scrollbars="vertical"
            android:text="Opis" />

        <ImageView
            android:id="@+id/eNaslovna"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:cropToPadding="true" />

        <TextView
            android:id="@+id/eNaziv"
            android:layout_width="234dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/eNaslovna"
            android:layout_marginEnd="11dp"
            android:scrollbars="vertical"

            android:text="Naziv"

            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/eAutor"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/eNaziv"
            android:layout_marginTop="74dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/eDatumObjavljivanja"
            android:layout_width="240dp"
            android:layout_height="23dp"
            android:layout_alignStart="@+id/eNaziv"
            android:layout_centerVertical="true"
            android:text="Datum objavljivanja" />

    </RelativeLayout>
</LinearLayout>

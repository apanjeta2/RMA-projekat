<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <TextView
            android:id="@+id/eNaziv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="17dp"
            android:text="@string/eNaziv"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/idKnjige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eNaziv"
            android:layout_below="@+id/eNaziv"
            android:text="@string/idKnjige"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dBroj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/idKnjige"
            android:layout_alignBottom="@+id/idKnjige"
            android:layout_centerHorizontal="true"
            android:text="Broj" />
    </RelativeLayout>
</LinearLayout>